<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:id="@+id/rakamPrint"
            android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/text_background"
            android:textColor="@color/black"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/rakamEnter" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/rakamPrint"
            android:background="@drawable/text_background"
            android:textAlignment="center"/>
    <Button
            android:text="SaydÄ±r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCheck" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="108dp" app:layout_constraintTop_toBottomOf="@+id/rakamEnter"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/button_design"
            android:textColor="@color/black"
    />
    <Button
            android:text="yeniden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRestart" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/rakamEnter" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"
            android:visibility="invisible" android:onClick="btnRestart"
            android:background="@drawable/button_design"
            android:textColor="@color/black"
    />
    <Button
            android:text="Bitir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEnd" android:layout_marginTop="128dp" android:visibility="invisible"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:onClick="btnEnd"
            app:layout_constraintTop_toBottomOf="@+id/buttonRestart"
            android:background="@drawable/button_design"
            android:textColor="@color/black"
    />


</androidx.constraintlayout.widget.ConstraintLayout>